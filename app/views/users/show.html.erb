<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
            <ul class="list-unstyled list-inline mt20">
                <li><%= link_to "followings", followings_user_path(@user), class: "btn btn-primary btn-info" %></li>
                <li><%= link_to "followers", followers_user_path(@user), class: "btn btn-primary btn-info" %></li>
            </ul>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>