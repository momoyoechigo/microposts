<div class="row">
    <aside class="col-md-4">
        <% if logged_in? %>
            <section class="user_info">
                <%= render partial: 'shared/user_image', locals: {user: current_user} %>
                    <h1><%= @user.name %></h1>
                    <p><%= link_to "profile edit", edit_user_path(@user) %></p>
            </section>
                <ul class="list-unstyled list-inline mt20">
                    <li><%= link_to "followings", followings_user_path(@user), class: "btn btn-primary btn-info" %></li>
                    <li><%= link_to "followers", followers_user_path(@user), class: "btn btn-primary btn-info" %></li>
                </ul>
        <% else %>
                <%= render partial: 'shared/user_image', locals: {user: @user} %>
                    <h1><%= @user.name %></h1>
        <% end %>
    </aside>
    <div class="col-md-8">
        <%= render 'follow_form' if logged_in? %>
        <% if @user.microposts.any? %>
            <h3>Microposts (<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
        <% end %>
    </div>
</div>